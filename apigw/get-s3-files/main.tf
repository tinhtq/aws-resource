resource "aws_iam_role" "lambda_execution_role" {
  name = "lambda_execution_role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = [
          "lambda.amazonaws.com",            
          "apigateway.amazonaws.com"
          ]
        }
      },
    ]
  })
}
